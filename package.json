{
	"name": "Heimdall",
	"version": "0.4.1",
	"description": "An application updater for Bonus applications.",
	"main": "main.js",
	"repository": "https://github.com/BonusPlay/Heimdall",
	"author": {
		"name": "BonusPlay",
		"email": "root@bonusplay.pl",
		"url": "https://bonusplay.pl"
	},
	"license": "See LICENSE file.",
	"private": true,
	"scripts": {
		"start": "electron .",
		"pack": "electron-builder --dir",
		"dist": "electron-builder"
	},
	"devDependencies": {
		"devtron": "^1.4.0",
		"electron": "^1.7.5",
		"electron-builder": "^19.24.1"
	},
	"dependencies": {
		"bootstrap": "4.0.0-beta",
		"electron-debug": "^1.4.0",
		"electron-store": "^1.2.0",
		"font-awesome": "^4.7.0",
		"jquery": "^3.2.1",
		"vue": "^2.4.2"
	},
	"build": {
		"appId": "pl.bonusplay.heimdall",
		"linux": {
			"category": "Game"
		},
		"mac": {
			"icon": "build/icon.icns"
		},
		"win": {
			"target": "nsis",
			"icon": "build/icon.ico"
		}
	}
}
